rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().roles.hasAny([role]);
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isTreasurer() {
      return hasRole('treasurer');
    }

    function isOwnProfileUpdate(userId) {
      return request.auth.uid == userId
        && request.resource.data.diff(resource.data).changedKeys().hasOnly([
          'name',
          'phone',
          'family_branch',
          'city',
          'photo_url',
          'updated_at'
        ]);
    }

    function isOwnPasswordCompletionUpdate(userId) {
      return request.auth.uid == userId
        && request.resource.data.diff(resource.data).changedKeys().hasOnly([
          'must_change_password',
          'updated_at'
        ])
        && resource.data.must_change_password == true
        && request.resource.data.must_change_password == false;
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow update: if isOwnProfileUpdate(userId) || isOwnPasswordCompletionUpdate(userId) || isAdmin();
      allow create, delete: if isAdmin();
    }
    
    // Announcements
    match /announcements/{doc} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Events
    match /events/{doc} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Contributions - Financial data (Extra protected)
    match /contributions/{doc} {
      allow read: if isAuthenticated();
      allow write: if false;  // ONLY via API routes
    }
    
    // Expenses - Financial data (Extra protected)
    match /expenses/{doc} {
      allow read: if isAuthenticated();
      allow write: if false;  // ONLY via API routes
    }
    
    // Transactions ledger - Financial data (Extra protected)
    match /transactions/{doc} {
      allow read: if hasRole('admin') || hasRole('treasurer');
      allow write: if false;  // ONLY via API routes
    }
    
    // Audit logs - Transparency (Read-only for admins)
    match /audit_logs/{doc} {
      allow read: if isAdmin();
      allow write: if false;  // ONLY via API routes
    }
    
    // Documents
    match /documents/{doc} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }

    // Access Requests (public create, admin review)
    match /access_requests/{doc} {
      allow read, write: if false;  // ONLY via API routes
    }
  }
}
