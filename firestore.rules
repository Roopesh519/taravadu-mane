rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function hasRole(role) {
      return isAuthenticated() && getUserData().roles.hasAny([role]);
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isTreasurer() {
      return hasRole('treasurer');
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow update: if request.auth.uid == userId || isAdmin();
      allow create, delete: if isAdmin();
    }
    
    // Announcements
    match /announcements/{doc} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Events
    match /events/{doc} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Contributions - Financial data (Extra protected)
    match /contributions/{doc} {
      allow read: if isAuthenticated();
      allow write: if false;  // ONLY via API routes
    }
    
    // Expenses - Financial data (Extra protected)
    match /expenses/{doc} {
      allow read: if isAuthenticated();
      allow write: if false;  // ONLY via API routes
    }
    
    // Transactions ledger - Financial data (Extra protected)
    match /transactions/{doc} {
      allow read: if hasRole('admin') || hasRole('treasurer');
      allow write: if false;  // ONLY via API routes
    }
    
    // Audit logs - Transparency (Read-only for admins)
    match /audit_logs/{doc} {
      allow read: if isAdmin();
      allow write: if false;  // ONLY via API routes
    }
    
    // Documents
    match /documents/{doc} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
